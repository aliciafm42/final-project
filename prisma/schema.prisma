datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ExperienceLevel {
  BEGINNER
  INTERMEDIATE
  EXPERIENCED
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  password        String
  experienceLevel ExperienceLevel?
  createdAt       DateTime         @default(now())
  goals           Goal[]           @relation("UserGoals")
  actions         Action[]         @relation("UserActions")
  recommendations Recommendation[] @relation("UserRecommendations")
}

model Goal {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  progress  Int      @default(0)
  userId    Int
  user      User     @relation("UserGoals", fields: [userId], references: [id])

  // Relation to actions
  actions Action[] @relation("GoalActions") // cascade is applied on the foreign key side
}

model Action {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())

  goalId Int?
  goal   Goal? @relation("GoalActions", fields: [goalId], references: [id], onDelete: Cascade) // foreign key side

  userId Int
  user   User @relation("UserActions", fields: [userId], references: [id])
}

model Recommendation {
  id              Int             @id @default(autoincrement())
  title           String
  description     String
  experienceLevel ExperienceLevel // use your enum, not String
  imageUrl        String?
  link            String?
  createdAt       DateTime        @default(now())

  // REQUIRED RELATION BACK TO USER
  userId Int?
  user   User? @relation("UserRecommendations", fields: [userId], references: [id])
}
